{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "outDir": "build",
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/bot/*"]
    }
  }
}
